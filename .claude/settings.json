{
  "includeCoAuthoredBy": false,
  "permissions": {
    "allow": [
      "Read(*)",
      "WebFetch(domain:*.google.com)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(jq:*)",
      "Bash(find:*)",
      "Bash(env)",
      "Bash(sed:*)",
      "Bash(claude:*)",
      "Bash(mkdir:*)"
    ],
    "deny": []
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline-command.sh"
  },
  "alwaysThinkingEnabled": true,
  "skipDangerousModePermissionPrompt": true,
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/ntfy-notify.sh"
          }
        ]
      }
    ]
  }
}
